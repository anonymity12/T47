<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.example.thinkpad.t47checklisthead.MainActivity">
    <LinearLayout
        android:id="@+id/eyes"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/left_eye"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/bg_shape_button"
            />
        <Button
            android:id="@+id/right_eye"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_toRightOf="@+id/left_eye"
            android:background="@drawable/bg_shape_button"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/eyes"
        android:gravity="center">
        <com.example.thinkpad.t47checklisthead.view.CloseWithPowerIndicatorView
            android:id="@+id/close_power_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />


    </LinearLayout>

</RelativeLayout>